@model TicketViewModel

<h3 class="mt-4">Create Ticket</h3>

<!-- The form posts back to the TicketController Create POST action --> 
<!-- TBC complete the form to create a ticket -->
<!-- form includes a select list to populate the studentid -->
<!-- and a text area to include the issue -->

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="mt-3">
        <label asp-for="StudentId" class="form-label"></label>
        <select asp-for="StudentId" class="form-control" asp-items="@Model.Students">
            <option disabled selected>Select your option</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Issue" class="form-label"></label>
        <textarea rows="5" asp-for="Issue" class="form-control"></textarea>
        <span asp-validation-for="Issue" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
    
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}